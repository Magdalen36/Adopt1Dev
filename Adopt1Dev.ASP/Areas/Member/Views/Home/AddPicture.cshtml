@model Adopt1Dev.ASP.Models.Form.UserForm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "AddPicture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddPicture</h1>

<h4>UserForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPicture">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Votre image</label>
                <input type="file" name="ImageFile" class="form-control-file" />
            </div>

            <div class="form-group">
                <input type="submit" value="AddPicture" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

